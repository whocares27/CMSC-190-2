<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAdapter"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/row_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:paddingTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/colorName">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:paddingBottom="2dp"
        android:textAllCaps="true"
        android:id="@+id/row_type"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/row_code"
        android:layout_alignLeft="@+id/row_code"
        android:layout_alignStart="@+id/row_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_section"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/row_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>